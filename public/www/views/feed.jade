// extend layout1
extends includes/_layout

// extend block head
block head

	// Head - Time for meta tags
	+global_headstuff({title: user.username+" ~ MyFeed"})

// extend block body
block body

	.Background

	// MyFeed Header
	header.MyFeedHeader
		.MyFeedTitle
			h1!=user.username
			p 
				a(href="https://github.com/polarity/MyFeed") MyFeed 
				| of #{user.username}. follow or subscribe via RSS

	// Stream Start
	.Stream(class="ng-cloak" ng-cloak)

		+CreatePost()

		.Posts(ng-controller="PostListController")
			.iterate(ng-repeat="PostObject in Posts | orderBy:'created':true track by $index")
				+Post({type: ''})
