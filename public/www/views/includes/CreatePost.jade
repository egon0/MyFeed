mixin CreatePost()

	.CreatePost(ng-controller="CreatePostController", ng-show="login.token")

		textarea.createpost-input(
			ng-keyup="parseText()", 
			ng-model="PostObject.content"
			placeholder="Was machst du gerade?")

		.Buttonbar
			button.send(ng-click="sendPostObject(PostObject)") Posten

		+Post({type: 'new'})