mixin AuthModule()

	.AuthModule(ng-controller="AuthController", ng-init="showLogin = false")
		.showLogin(ng-click="showLogin = !showLogin") [=]
		.info(ng-show="login.info")
			p {{login.info}}

		.not-loggedin(ng-hide="login.token || !showLogin")
			input.username(
				type="text", 
				placeholder="Username", 
				ng-model="login.username", 
				value="{{login.username}}"
			)
			input.password(
				type="password", 
				placeholder="Password", 
				ng-model="login.password", 
				value="{{login.password}}"
			)
			button.sendLogin(
				ng-click="sendLogin(login.username,login.password)"
			) Login !!

		.loggedin(ng-show="login.token && showLogin")
			button.sendLogin(
				ng-click="sendLogout()"
			) Logout !!